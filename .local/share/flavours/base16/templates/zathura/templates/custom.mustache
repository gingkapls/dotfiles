# Base16 {{scheme-name}}
# Author: {{scheme-author}}

set default-bg                  "rgba({{base00-rgb-r}}, {{base00-rgb-g}}, {{base00-rgb-b}}, 0)"
set default-fg                  "#{{base01-hex}}"

set statusbar-fg                "#{{base04-hex}}"
set statusbar-bg				"rgba({{base02-rgb-r}}, {{base02-rgb-g}}, {{base02-rgb-b}}, 0.8)"

set inputbar-bg                 "rgba({{base00-rgb-r}}, {{base00-rgb-g}}, {{base00-rgb-b}}, 0.8)"
set inputbar-fg                 "#{{base07-hex}}"

set notification-bg             "rgba({{base00-rgb-r}}, {{base00-rgb-g}}, {{base00-rgb-b}}, 0.8)"
set notification-fg             "#{{base07-hex}}"

set notification-error-bg       "rgba({{base00-rgb-r}}, {{base00-rgb-g}}, {{base00-rgb-b}}, 0.8)"
set notification-error-fg       "#{{base08-hex}}"

set notification-warning-bg     "rgba({{base00-rgb-r}}, {{base00-rgb-g}}, {{base00-rgb-b}}, 0.8)"
set notification-warning-fg     "#{{base08-hex}}"

set highlight-color             "#{{base0A-hex}}"
set highlight-active-color      "#{{base0D-hex}}"

set completion-bg               "#{{base01-hex}}"
set completion-fg               "#{{base0D-hex}}"

set completion-highlight-fg     "#{{base07-hex}}"
set completion-highlight-bg     "#{{base0D-hex}}"

set recolor-lightcolor          "#{{base00-hex}}"
set recolor-darkcolor           "#{{base07-hex}}"

set index-active-bg 			"#{{base00-hex}}"
set index-active-fg 			"#{{base07-hex}}"

set render-loading-bg			"#{{base00-hex}}"
set render-loading-fg			"#{{base07-hex}}"

set recolor                     "false"
set recolor-keephue             "true"

## sepia
map b feedkeys ":set recolor true<Return>"
map m feedkeys ":set recolor-lightcolor '#DFC7A7'<Return><C-m>"
map <C-m> feedkeys ":set recolor-darkcolor '#000000'<Return>b"

## transparent dark
map i feedkeys ":set recolor-lightcolor 'rgba({{base00-rgb-r}}, {{base00-rgb-g}}, {{base00-rgb-b}}, 0.85)'<Return><C-i>"
map <C-i> feedkeys ":set recolor-darkcolor '#{{base07-hex}}'<Return>b"

## transparent light
map n feedkeys ":set recolor-lightcolor 'rgba({{base07-rgb-r}}, {{base07-rgb-g}}, {{base07-rgb-b}}, 0.95)'<Return><C-n>"
map <C-n> feedkeys ":set recolor-darkcolor '#{{base00-hex}}'<Return>b"
