# Base16 {{scheme-name}}
# Author: {{scheme-author}}

set default-bg                  "rgba({{base00-rgb-r}}, {{base00-rgb-g}}, {{base00-rgb-b}}, 1)"
set default-fg                  "#{{base04-hex}}"

set statusbar-bg				"rgba({{base00-rgb-r}}, {{base00-rgb-g}}, {{base00-rgb-b}}, .65)"
set statusbar-fg                "#{{base04-hex}}"

set inputbar-bg                 "rgba({{base00-rgb-r}}, {{base00-rgb-g}}, {{base00-rgb-b}}, 0.8)"
set inputbar-fg                 "#{{base04-hex}}"

set notification-bg             "rgba({{base00-rgb-r}}, {{base00-rgb-g}}, {{base00-rgb-b}}, 0.8)"
set notification-fg             "#{{base04-hex}}"

set notification-error-bg       "rgba({{base00-rgb-r}}, {{base00-rgb-g}}, {{base00-rgb-b}}, 0.8)"
set notification-error-fg       "#{{base08-hex}}"

set notification-warning-bg     "rgba({{base00-rgb-r}}, {{base00-rgb-g}}, {{base00-rgb-b}}, 0.8)"
set notification-warning-fg     "#{{base08-hex}}"

set highlight-color             "#{{base0A-hex}}"
set highlight-active-color      "#{{base0D-hex}}"

set completion-bg               "#{{base01-hex}}"
set completion-fg               "#{{base0D-hex}}"

set completion-highlight-fg     "#{{base04-hex}}"
set completion-highlight-bg     "#{{base0D-hex}}"

set recolor-lightcolor          "#{{base00-hex}}"
set recolor-darkcolor           "#{{base04-hex}}"

set index-active-bg 			"#{{base00-hex}}"
set index-active-fg 			"#{{base04-hex}}"

set render-loading-bg			"#{{base00-hex}}"
set render-loading-fg			"#{{base04-hex}}"

set recolor                     "true"
set recolor-keephue             "true"

map '*' feedkeys ":set recolor true<Return>"
## sepia
map 'S' feedkeys ":set recolor-lightcolor '#DFC7A7'<Return>("
map '(' feedkeys ":set statusbar-fg '#{{base04-hex}}'<Return>)"
map ')' feedkeys ":set recolor-darkcolor '#000000'<Return>*"

## transparent dark
map 'D' feedkeys ":set recolor-lightcolor 'rgba({{base00-rgb-r}}, {{base00-rgb-g}}, {{base00-rgb-b}}, 0.85)'<Return>{"
map '{' feedkeys ":set statusbar-fg '#{{base04-hex}}'<Return>}"
map '}' feedkeys ":set recolor-darkcolor '#{{base04-hex}}'<Return>*"

## transparent light
map 'A' feedkeys ":set recolor-lightcolor 'rgba({{base04-rgb-r}}, {{base04-rgb-g}}, {{base04-rgb-b}}, 0.95)'<Return>)"
map ')' feedkeys ":set statusbar-fg '#{{base00-hex}}'<Return>("
map '(' feedkeys ":set recolor-darkcolor '#{{base00-hex}}'<Return>*"
