# Default config for imv

[options]

title_text = [$imv_current_index/$imv_file_count] $(echo $imv_current_file | awk -F "/" '{print $(NF-1) " " $NF}') $(echo $imv_current_file | rev | cut -d "/" -f 3- | rev)
# Suppress built-in key bindings, and specify them explicitly in this
# config file.
suppress_default_binds = true
initial_pan = 50 0

[aliases]
# Define aliases here. Any arguments passed to an alias are appended to the
# command.
# alias = command to run

[binds]
# Define some key bindings
q = quit
y = exec echo working!
<Ctrl+l> = exec "$HOME/.scripts/walset.sh" $imv_current_file light &
<Ctrl+d> = exec "$HOME/.scripts/walset.sh" $imv_current_file dark &

# Image navigation
<Left> = prev
h = prev
<bracketleft> = prev
<Right> = next
l = next
<bracketright> = next
gg = goto 0
<Shift+G> = goto -1

# Panning
j = pan 0 -50
k = pan 0 50
<Shift+H> = pan 50 0
<Shift+L> = pan -50 0

# Zooming
<Up> = zoom 1
<Shift+plus> = zoom 1
<Shift+K> = zoom 1
i = zoom 1
<Down> = zoom -1
<minus> = zoom -1
<Shift+J> = zoom -1
o = zoom -1

# Other commands
x = close
f = fullscreen
d = overlay
p = exec echo $imv_current_file
c = center
s = scaling next
<Shift+S> = upscaling next
a = zoom actual
r = reset

# Gif playback
<period> = next_frame
<space> = toggle_playing

# Slideshow control
t = slideshow +1
<Shift+T> = slideshow -1
