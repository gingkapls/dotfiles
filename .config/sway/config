# Note: pass the final command to swaymsg so that the resulting window can be opened
# on the original workspace that the command was run on.

set $menu bemenu-run -H30 --nb '$base00' --nf '$base0E' --fb '$base00' --ff '$base0F' --hb '$base00' --hf '$base0F' --tb '$base00' --tf '$base0F' --fn 'Iosveka Heavy Oblique 16' | xargs swaymsg exec --

set $typer bemenu -H30 --nb '$base00' --nf '$base0E' --fb '$base00' --ff '$base0F' --hb '$base00' --hf '$base0F' --tb '$base00' --tf '$base0F' --fn 'Iosveka Heavy Oblique 16' -I1

set $gnome-schema org.gnome.desktop.interface 

