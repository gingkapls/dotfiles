## Applications
mode applications {
	bindsym e exec $term -e vifm, mode "default"
	bindsym f exec firefox, mode "default"
	bindsym m exec $term --class 'Alacritty - ncmpcpp' -e "ncmpcpp", mode "default"
	bindsym b exec $term --class 'Alacritty - bluetoothctl' -e "bluetoothctl", mode "default"
    bindsym l exec $term --class 'Alacritty - walset.sh' -e "$HOME/.scripts/walset.sh" light, mode "default"
    bindsym d exec $term --class 'Alacritty - walset.sh' -e "$HOME/.scripts/walset.sh" dark, mode "default"
	bindsym c exec $term --class 'Alacritty - colurs.sh' -e "$HOME/.scripts/colurs.sh", mode "default"
	bindsym s exec "scrcpy -t", mode "default"
	bindsym a exec $HOME/.scripts/genystart.sh, mode "default"
	bindsym shift+a exec $HOME/.scripts/genystart.sh -a, mode "default"
	bindsym Return exec $term --class 'Alacritty - dropdown', mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+Escape mode applications 
bindsym $mod+m exec nwggrid -b "$base00" -o 1.00 -s 256 -d "$HOME/Mangas/.Desktops/"
bindsym $mod+shift+d exec echo "$(wl-paste) \n $(wl-paste -p)" | bemenu $menu -I1 | $HOME/.scripts/dictdialog.sh

